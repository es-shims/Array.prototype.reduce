{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"array-bracket-newline": 0,
		"complexity": [2, 15],
		"id-length": 0,
		"max-statements-per-line": [2, { "max": 2 }],
		"new-cap": [2, {
			"capIsNewExceptions": [
				"ArraySpeciesCreate",
				"Call",
				"CreateDataPropertyOrThrow",
				"Get",
				"HasProperty",
				"IsCallable",
				"LengthOfArrayLike",
				"RequireObjectCoercible",
				"ToObject",
				"ToString",
			],
		}],
		"no-magic-numbers": 0,
	},

	"overrides": [
		{
			"files": "test/**",
			"rules": {
				"max-lines-per-function": 0,
				"max-params": 0,
				"no-invalid-this": 1,
				"strict": 0,
			},
		},
	],
}
